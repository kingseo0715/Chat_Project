<Window x:Class="Chat.Join"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="Join" Height="640" Width="360">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="169" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" MinHeight="319" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Content="이름" HorizontalAlignment="Left" Margin="110,167,0,0" VerticalAlignment="Top" FontSize="20" Height="37" Grid.Row="2" Width="50"/>
        <Label Content="아이디" HorizontalAlignment="Left" Margin="95,204,0,0" VerticalAlignment="Top" Grid.Row="2" FontSize="20" Height="36" Width="70"/>
        <Label Content="비밀번호" HorizontalAlignment="Left" Margin="74,240,0,0" VerticalAlignment="Top" Grid.Row="2" FontSize="20" Height="36" Width="90"/>
        <Label Content="핸드폰번호" HorizontalAlignment="Left" Margin="55,276,0,0" VerticalAlignment="Top" Grid.Row="2" FontSize="20" Height="36" Width="110"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="1,173,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="25" Grid.Row="2"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="1,213,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="25" Grid.Row="2"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="1,252,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="25" Grid.Row="2"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="1,287,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="25" Grid.Row="2"/>
        <Button x:Name="Btn_Join" Content="회원가입" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="100,76,0,0" Grid.Row="3" VerticalAlignment="Top" Width="160" Height="35" Click="Btn_Join_Click"/>
        <Button Grid.Column="1" Content="중복" HorizontalAlignment="Left" Margin="130,213,0,0" Grid.Row="2" VerticalAlignment="Top" Height="25"/>

    </Grid>
</Window>
