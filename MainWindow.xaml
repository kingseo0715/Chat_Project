<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="360">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Grid.Column="1" HorizontalAlignment="Center" Margin="0,181,0,0" Grid.Row="2" TextWrapping="Wrap" Text="아이디" VerticalAlignment="Top" Width="160" Height="35"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Center" Margin="0,221,0,0" Grid.Row="2" TextWrapping="Wrap" Text="비밀번호" VerticalAlignment="Top" Width="160" Height="35"/>
        <Button x:Name="btn_login" Grid.Column="1" Content="로그인" HorizontalAlignment="Center" Margin="0,269,0,0" Grid.Row="2" VerticalAlignment="Top" Width="160" Height="35" Click="btn_login_Click"/>
        <Button x:Name="btn_join" Grid.Column="1" Content="회원이 아니라면 클릭" HorizontalAlignment="Center" Margin="0,319,0,0" Grid.Row="2" VerticalAlignment="Top" Width="160" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF1049F7" FontStyle="Italic" Click="btn_join_Click"/>


    </Grid>
</Window>
